<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8"/>
    <title>Hacer Pedido</title>
    <%- include('../../includes/head_styles.ejs'); %>
    <%- include('../../includes/head_scripts.ejs'); %>
    <%- include('../../includes/head_random.ejs'); %>
</head>
<body>
    <%- include('../../includes/header.ejs'); %>
    
    <div class="contenido">
    
    <%
    if (sesion.usuario && sesion.usuario.tipo == "Cliente") {
    %>    
        <div class="contenedor-formulario">
            <h1>Hacer Pedido</h1>
            <form action="<%=url%>/pedido/save" method="POST">
                <label for="ciudad">Ciudad</label>
                <input type="text" name="ciudad" required/>
                <label for="comuna">Comuna</label>
                <input type="text" name="comuna" required/>
                <label for="calle">Calle</label>
                <input type="text" name="calle" required/>
                <button type="submit">Hacer Pedido</button>
            </form>
        </div>
    <%
    }
    else {
    %>
        <div class="contenedor-pagina-centrada">
            <h1 class="titulo-pagina-centrada">Por favor inicia sesi√≥n con tu cuenta de usuario para poder realizar la compra</h1>
        </div>
    <%
    }
    %>
        
    </div>
</body>
</html>